= form_for @categorization do |f|
  -if @categorization.errors.any?
    #error_explanation
      %h2= "#{pluralize(@categorization.errors.count, "error")} prohibited this categorization from being saved:"
      %ul
        - @categorization.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :category_id
    = f.number_field :category_id
  .field
    = f.label :content_id
    = f.number_field :content_id
  .actions
    = f.submit 'Save'
