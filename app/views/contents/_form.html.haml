= form_for(@content, :html => {:multipart => true}) do |f|
  - if @content.errors.any?
    #error_explanation
      %h2
        = pluralize(@content.errors.count, "error")
        prohibited this content from being saved:
      %ul
        - @content.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :body
    %br/
    = f.text_area :body
  .field
    = f.label :source_name
    %br/
    = f.text_field :source_name
  .field
    = f.label :source_link
    %br/
    = f.text_field :source_link
  .field
    = f.label :photo
    %br/
    = f.file_field :photo
  .actions
    = f.submit
