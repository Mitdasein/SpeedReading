- model_class = Language
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @languages.each do |language|
      %tr
        %td= language.name
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_language_path(language), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), language_path(language), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_language_path, :class => 'btn btn-primary'
= will_paginate @languages
