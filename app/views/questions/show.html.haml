- model_class = Question
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong Body:
  %br
  = @question.body
%p
  %strong Answers:
  - ['A', 'B', 'C', 'D'].each_with_index do |letter, index|
    %br
    = "#{letter}."
    - if @question.correct_answer == index
      %span{:style => 'color:green'}
        = @question.answers[index]
    - else
      %span{:style => 'color:red'}
        = @question.answers[index]

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), content_path(@question.content), :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_content_question_path(@question.content, @question), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), content_question_path(@question.content, @question), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
