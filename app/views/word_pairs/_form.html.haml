= form_for @word_pair, :html => { :class => 'form-horizontal' } do |f|
  = render :partial => 'layouts/form_errors', :object => @word_pair, :as => :model
  .control-group
    = f.label :word_1, :class => 'control-label'
    .controls
      = f.text_field :word_1, :class => 'text_field'
  .control-group
    = f.label :word_2, :class => 'control-label'
    .controls
      = f.text_field :word_2, :class => 'text_field'
  .control-group
    = f.label :relation, :class => 'control-label'
    .controls
      = f.radio_button :relation, 'antonyms', :class => 'radio_button'
      antonyms
      = f.radio_button :relation, 'synonyms', :class => 'radio_button'
      synonyms
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), word_pairs_path, :class => 'btn'
